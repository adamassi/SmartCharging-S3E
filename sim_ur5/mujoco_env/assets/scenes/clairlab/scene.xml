<mujoco model="tableworld">
    <!-- âš™ï¸ MuJoCo basic settings -->
    <compiler eulerseq="XYZ"/> <!-- Specifies the Euler angle sequence for rotations -->
    <statistic center="0.3 0 0.4" extent="0.8"/> <!-- ðŸ“Š Defines the center and extent of the simulation statistics -->

    <!-- ðŸ’¡ Lighting and camera settings -->
    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1"/> <!-- ðŸ’¡ Configures the headlight with diffuse and ambient lighting -->
        <rgba haze="0.15 0.25 0.35 1"/> <!-- ðŸŒ«ï¸ Adds a haze effect to the environment -->
        <global azimuth="120" elevation="-20" offwidth="1280" offheight="720"/> <!-- ðŸŒ Sets global lighting and rendering parameters -->
    </visual>

    <!-- ðŸ–¼ï¸ Assets: textures, materials, meshes -->
    <asset>
        
        
        <!-- ðŸŒŒ Environment textures -->
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/> <!-- ðŸŒˆ Skybox gradient for the environment -->
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/> <!-- ðŸŸ¦ Checkerboard texture for the ground -->
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/> <!-- ðŸªž Material for the groundplane -->

        <!-- ðŸªµ Table and block materials -->
        <texture name="wood" file="wood.png" type="2d"/> <!-- ðŸ–Œï¸ Texture for wooden objects -->
        <material name="wood_material" texture="wood" texrepeat="50 50" texuniform="true" rgba="0.8 0.8 0.8 1"/> <!-- ðŸªµ Material for wooden objects -->
    </asset>

    <worldbody>
      
        
        <!-- ðŸ’¡ Global light source -->
        <light pos="0 0 1.5" dir="0 0 -1" directional="true"/> <!-- ðŸ’¡ Directional light source -->

        <!-- ðŸŸ¦ Ground plane -->
        <geom name="floor" pos="0.0 0.0 -0.8" size="0 0 0.05" type="plane" material="groundplane"/> <!-- ðŸŸ¦ Ground plane with checkerboard material -->

        <!-- ðŸª‘ Table 1 -->
        <body name="table1" pos="0.365 0 -0.005">
            <geom name="table1_top" type="box" size="0.625 0.42 0.01" pos="0 0 0"/> <!-- ðŸª‘ Tabletop geometry -->
            <geom name="table1_leg_1" type="cylinder" size=".02 .4" pos=".5 -.33 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 1 -->
            <geom name="table1_leg_2" type="cylinder" size=".02 .4" pos=".5 .33 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 2 -->
            <geom name="table1_leg_3" type="cylinder" size=".02 .4" pos="-.5 -.33 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 3 -->
            <geom name="table1_leg_4" type="cylinder" size=".02 .4" pos="-.5 .33 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 4 -->
        </body>

        <!-- ðŸª‘ Table 2 -->
        <body name="table2" pos="-0.805 -0.615 -0.005">
            <geom name="table2_top" type="box" size="0.42 0.925 0.01" pos="0 0 0"/> <!-- ðŸª‘ Tabletop geometry -->
            <geom name="table2_leg_1" type="cylinder" size=".02 .4" pos=".33 -.8 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 1 -->
            <geom name="table2_leg_2" type="cylinder" size=".02 .4" pos=".33 .8 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 2 -->
            <geom name="table2_leg_3" type="cylinder" size=".02 .4" pos="-.33 -.8 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 3 -->
            <geom name="table2_leg_4" type="cylinder" size=".02 .4" pos="-.33 .8 -.4" euler="0 0 0"/> <!-- ðŸ¦µ Table leg 4 -->
        </body>

       
        

        <!-- ðŸŽ¥ Cameras -->
        <camera name="top-right" pos="1.3 -1.5 1.1" euler="1 0 1.1"/> <!-- ðŸŽ¥ Camera positioned at the top-right -->
        <camera name="robot-cam" pos="1.3 -1.5 1.1" euler="1 0 1.1" fovy="60"/> <!-- ðŸ¤– Robot camera with a field of view -->
    </worldbody>
</mujoco>
