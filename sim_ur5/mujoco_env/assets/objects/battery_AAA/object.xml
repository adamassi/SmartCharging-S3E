<mujoco model="battery_AAA">
    <asset>
        <!-- Date texture for battery -->
        <texture name="battery_texture" type="2d" file="dated_image.png" />
        <material name="battery_material" texture="battery_texture" texrepeat="3 3" texuniform="true" />
    </asset>

    <worldbody>
        <body name="battery_AAA" pos="0 0 0">
            <!-- Main green body with texture -->
            <geom name="battery_body" type="cylinder" pos="0 0 0" size="0.00525 0.0195"
                  material="battery_material"
                  mass="0.012" friction="1 0.8 0.6" condim="4"/>

            <!-- Bottom grey cap -->
            <geom name="battery_bottom_cap" type="cylinder" pos="0 0 -0.02075" size="0.00525 0.00125"
                  rgba="0.5 0.5 0.5 1" mass="0.002" friction="1 0.8 0.6" condim="4"/>

            <!-- Top grey cap -->
            <geom name="battery_top_cap" type="cylinder" pos="0 0 0.02075" size="0.00525 0.00125"
                  rgba="0.5 0.5 0.5 1" mass="0.002" friction="1 0.8 0.6" condim="4"/>

            <!-- Positive bump on top -->
            <geom name="battery_positive_bump" type="cylinder" pos="0 0 0.02225" size="0.002 0.00025"
                  rgba="0.5 0.5 0.5 1" mass="0.0005" friction="1 0.8 0.6" condim="4"/>

            <!-- <joint name="battery_AAA_joint" type="free"/> -->
        </body>
    </worldbody>
</mujoco>
